
<picker-view
    indicator-style="height: 50px;"
    style="width: 100%; height: 300px;"
    value="{{course_value}}"
    bindchange="bindCourseChange"
  >
    <picker-view-column>
      <view wx:for="{{teacherinfo.courses}}" style="line-height: 50px">{{item.name}}</view>
    </picker-view-column>
   
  </picker-view>
<view class="section__title">日期选择</view>
<picker
    mode="date"
    value="{{date}}"
    start="2015-09-01"
    end="2017-09-01"
    bindchange="bindDateChange"
  >
    <view class="picker">
      当前选择: {{date}}
    </view>
  </picker>
<view class="section__title">时间选择</view>
  <picker
    mode="time"
    value="{{time}}"
    start="09:01"
    end="21:01"
    bindchange="bindTimeChange"
  >
    <view class="picker">
      当前选择: {{time}}
    </view>
  </picker>


<button bindtap='sendLiveinfo'>提交开课信息</button>

